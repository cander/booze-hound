<!-- BEGIN User Index include -->
<div class="mb-5">
    <div class="mb-5">
        <h2>User Profile for <%= @user.first_name + " " + @user.last_name %></h2>
        <div class="col-md-7 col-lg-8">
        <form class="needs-validation" novalidate="">
          <div class="row g-3">
            <div class="col-sm-6 mb-3">
              <label for="firstName" class="form-label">First name</label>
              <input type="text" class="form-control" id="firstName" placeholder="" value="<%= @user.first_name %>" required>
              <div class="invalid-feedback">Valid first name is required.</div>
            </div>
            <div class="col-sm-6 mb-3">
              <label for="lastName" class="form-label">Last name</label>
              <input type="text" class="form-control" id="lastName" placeholder="" value="<%= @user.last_name %>" required>
              <div class="invalid-feedback">Valid last name is required.</div>
            </div>
            <div class="col-12 mb-3">
              <label for="email" class="form-label">Email Address</label>
              <input type="email" class="form-control" id="email" placeholder="you@example.com" value="<%= @user.email %>" required>
              <div class="invalid-feedback">Please enter a valid email address.</div>
            </div>
            <div class="col-12 mb-3">
              <label for="username" class="form-label">Username</label>
              <p class="fst-italic small">This is your display name to other users.</p>
              <div class="input-group has-validation">
                <input type="text" class="form-control" id="username" placeholder="Username" value="<%= "@user.username (add to model)" %>" required>
                <div class="invalid-feedback">Your username is required.</div>
              </div>
            </div>
            <div class="col-12 mb-5">
              <label class="form-label">Followed Categories</label>
              <p class="fst-italic small">Specify the bottle categories you'd like to follow.</p>
              <div class="form-check">
                <input type="checkbox" class="form-check-input" id="category-1">
                <label class="form-check-label" for="category-1">Category 1</label>
              </div>
              <div class="form-check">
                <input type="checkbox" class="form-check-input" id="category-2">
                <label class="form-check-label" for="category-2">Category 2</label>
              </div>
              <div class="form-check">
                <input type="checkbox" class="form-check-input" id="category-3">
                <label class="form-check-label" for="category-3">Category 3</label>
              </div>
              <div class="form-check">
                <input type="checkbox" class="form-check-input" id="category-4">
                <label class="form-check-label" for="category-4">Category 4</label>
              </div>
            </div>
          </div>
          <button class="btn btn-primary" type="submit">Save User Profile</button>
        </form>
      </div>
    </div>
</div>
<!-- END User Index include -->
