<!-- BEGIN Home (Authenticated) include -->
<div class="">
  <%= yield %>
  <h2>Recent Events:</h2>
  <% if @events.none? %>
    <h3>No news is boring</h3>
  <% else %>
    <table class="table table-striped table-hover align-top mb-3 table-feature-comparison">
      <thead>
        <tr>
          <th scope="col">Date</th>
          <th scope="col">Bottle</th>
          <th scope="col">Info</th>
        </tr>
      </thead>
      <tbody class="table-striped table-group-divider align-middle">
      <% @events.each_with_index do |event, index| %>
        <tr>
          <td><%= format_date(event) %></td>
          <td><%= link_to event.olcc_bottle.name, event.olcc_bottle %></td>
          <td><%= show_event(event) %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  <%end %>
  <% if @prev_page %>
    <%= link_to home_path(page: @prev_page), class: "my-2, link-underline link-underline-opacity-0" do %>
      <i class="bi bi-arrow-left-square me-1"></i>Previous
    <% end %>
  <% end %>
  <% if @next_page and @prev_page %>
    <span class="mx-2"></span>
  <% end %>
  <% if @next_page %>
    <%= link_to home_path(page: @next_page), class: "my-2, link-underline link-underline-opacity-0" do %>
      Next<i class="bi bi-arrow-right-square ms-1"></i>
    <% end %>
  <% end %>
</div>
<!-- END Home (Authenticated) include -->
