<div class="row">
  <div class="col-lg-4 order-lg-2">
    <%= render 'layouts/sidebar/user_menu_authenticated' %>
  </div>
  <div class="col-lg-8 order-lg-1">
    <!-- BEGIN Main Body Content include -->
    <%= render 'layouts/content/bottles_index' %>
    <!-- END Main Body Content include -->
  </div>
</div>
<div class="mt-5 border border-1 p-3">
<h5><em>Warning: some hacky UI stuff below:</em></h5>
  <p><em>Hacky admin function I don't want to lose:</em></p>
  <p>Add a bottle based on the OLCC new item code:</p>
  <%= form_with url: olcc_bottles_path do |form| %>
    <div>
      <%= form.label :new_item_code %>
      <%= form.text_field :new_item_code %>
      <%= category_select(form) %>
    </div>
    <div>
      <%= form.submit "Search" %>
    </div>
  <% end %>
</div>
